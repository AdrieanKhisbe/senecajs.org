{
  "source": "src",
  "destination": "dist",
  "plugins": {
    "metalsmith-drafts": true,
    "metalsmith-assets": {
      "source": "./assets",
      "destination": "."
    },
    "metalsmith-markdown": {
      "smartypants": true,
      "gfm": true,
      "tables": true
    },
    "metalsmith-layouts": {
      "engine": "handlebars",
      "directory": "src/template/layouts",
      "partials": "src/template/partials",
      "pattern": "pages/**/*"
    },
    "metalsmith-move-up": {
     "pattern": [
      "pages/**",
      "images/favicon.ico"
    ]
    },
    "metalsmith-ignore": [
      "drafts/*",
      "unfinished/*"
    ]
  }
}
